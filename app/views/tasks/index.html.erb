<h1>Index of tasks</h1>
<%= link_to "Add new task", new_task_path %>
<% @tasks.each do |task| %>
  <h2><%= link_to task.name, edit_task_path(task) %></h2>
  <p>- <%= task.description %></p>
  <%= link_to "edit", edit_task_path(task) %>
  <%= link_to "delete", task_path(task), method: :delete %>
  <hr>
<% end %>
